@model Student
@{
    ViewData["Title"] = "Edits Student";
}
<link rel="stylesheet" href="~/css/Edit.css" asp-append-version="true" />
<div class="container">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Edit Student Information</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="col-form-label">Name:</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DoB" class="col-form-label">DoB:</label>
                            <input asp-for="DoB" class="form-control datepicker" required />
                            <span asp-validation-for="DoB" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="col-form-label">Email:</label>
                            <input asp-for="Email" class="form-control is-invalid" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="StudentID" class="col-form-label">StudentID:</label>
                            <input asp-for="StudentID" class="form-control" required />
                            <span asp-validation-for="StudentID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Class" class="col-form-label">Class:</label>
                            <input asp-for="Class" class="form-control" required />
                            <span asp-validation-for="Class" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Major" class="col-form-label">Major:</label>
                            <input asp-for="Major" class="form-control" required />
                            <span asp-validation-for="Major" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
